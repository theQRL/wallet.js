{
  "name": "@theqrl/wallet.js",
  "version": "1.0.2",
  "description": "Quantum-resistant wallet library for The QRL using ML-DSA-87 (FIPS 204)",
  "type": "module",
  "main": "dist/cjs/wallet.js",
  "module": "dist/mjs/wallet.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/mjs/wallet.js",
      "require": "./dist/cjs/wallet.js"
    }
  },
  "scripts": {
    "build": "rollup -c && ./fixup",
    "prepublishOnly": "npm run build",
    "test": "mocha",
    "lint-check": "eslint 'src/**/*.js' 'test/**/*.js'",
    "lint": "eslint --fix 'src/**/*.js' 'test/**/*.js'",
    "report-coverage": "c8 --reporter=text-lcov npm run test > coverage.lcov",
    "coverage": "c8 npm run test"
  },
  "author": "QRL contributors <info@theqrl.org> (https://theqrl.org)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/theQRL/wallet.js"
  },
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "@theqrl/mldsa87": "^1.0.5",
    "randombytes": "^2.1.0"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.14.12",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^8.37.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "fast-check": "^4.5.3",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "rollup": "^4.55.1",
    "typescript": "^5.5.4"
  }
}
